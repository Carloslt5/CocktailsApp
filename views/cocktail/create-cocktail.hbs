<div class="container">
    <div class="row justify-content-center">
        <div class="col-12 col-md-6">
            <h1>CREATE YOUR COCKTAILS</h1>
            <hr>

            <form action="/profile/create-cocktail" method="post" enctype="multipart/form-data">

                <div class="mb-3">
                    <label for="strDrink" class="form-label">Cocktails name:</label>
                    <input type="text" class="form-control" id="strDrink" name="strDrink">
                </div>
                <div class="mb-3">
                    <div class="col-12">
                        <label for="strAlcoholic" class="form-label">Type:</label>
                    </div>
                    <select class="col-12 py-2 px-2" name="strAlcoholic" id="strAlcoholic">
                        <option value="alcoholic">Alcoholic</option>
                        <option value="non-alcoholic">Non Alcoholic</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label for="strDrinkThumb" class="form-label">Add your image:</label>
                    <input type="file" class="form-control" id="strDrinkThumb" name="strDrinkThumb">
                </div>
                <div class="row">
                    <p>Ingredients:</p>
                    <div class="col">
                        <input type="text" class="form-control mb-2" id="strIngredient1" name="strIngredient1"
                            placeholder="Ingredients 1">
                        <input type="text" class="form-control mb-2" id="strIngredient2" name="strIngredient2"
                            placeholder="Ingredients 2">
                        <input type="text" class="form-control mb-2" id="strIngredient3" name="strIngredient3"
                            placeholder="Ingredients 3">
                        <input type="text" class="form-control mb-2" id="strIngredient4" name="strIngredient4"
                            placeholder="Ingredients 4">
                        <input type="text" class="form-control mb-2" id="strIngredient5" name="strIngredient5"
                            placeholder="Ingredients 5">
                    </div>
                    <div class="col">

                        <input type="text" class="form-control mb-2" id="strMeasure1" name="strMeasure1"
                            placeholder="Measure 1">
                        <input type="text" class="form-control mb-2" id="strMeasure2" name="strMeasure2"
                            placeholder="Measure 2">
                        <input type="text" class="form-control mb-2" id="strMeasure3" name="strMeasure3"
                            placeholder="Measure 3">
                        <input type="text" class="form-control mb-2" id="strMeasure4" name="strMeasure4"
                            placeholder="Measure 4">
                        <input type="text" class="form-control mb-2" id="strMeasure5" name="strMeasure5"
                            placeholder="Measure 5">

                    </div>
                </div>

                <div class="col">
                    <label for="strInstructions" class="form-label">Instructions:</label>
                    <textarea name="strInstructions" id="strInstructions" class="col-12 px-2 py-2"
                        style="height: 250px"></textarea>
                </div>
                <button type="submit" class="btn btn-dark mt-4">Create Cocktail</button>


            </form>

        </div>


    </div>
</div>