<div class="container py-5">
    <h1> Edit {{name}} profile </h1>
    <hr>

    <div class="row">
        <form action="/edit-cocktail/{{id}}" method="post" enctype="multipart/form-data">
            <div class="col-12 ">

                <div class="mb-3">
                    <label for="name" class="form-label">Cocktails name:</label>
                    <input type="text" class="form-control" id="name" name="name" value="{{name}}">
                </div>
                <div class="mb-3">
                    <div class="col-12">
                        <label for="type" class="form-label">Type:</label>
                    </div>
                    <select class="col-12 py-2 px-2" name="type" id="type">
                        <option value="alcoholic">Alcoholic</option>
                        <option value="non-alcoholic">Non Alcoholic</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label for="image" class="form-label">Add your image:</label>
                    <input type="file" class="form-control" id="image" name="image" value="{{image}}">
                    <div class="col-3 "><img class="d-block text-center" src="{{image}}" alt=""></div>
                </div>


            </div>

            <div class="row mb-3">
                <h4>Ingredients:</h4>
                <hr>
                <div class="col">
                    <input type="text" class="form-control mb-2" id="ingredient1" name="ingredient1"
                        placeholder="Ingredients 1" value="{{ingredient1}}">
                    <input type="text" class="form-control mb-2" id="ingredient2" name="ingredient2"
                        placeholder="Ingredients 2" value="{{ingredient2}}">
                    <input type=" text" class="form-control mb-2" id="ingredient3" name="ingredient3"
                        placeholder="Ingredients 3" value="{{ingredient3}}">
                    <input type=" text" class="form-control mb-2" id="ingredient4" name="ingredient4"
                        placeholder="Ingredients 4" value="{{ingredient4}}">
                    <input type=" text" class="form-control mb-2" id="ingredient5" name="ingredient5"
                        placeholder="Ingredients 5" value="{{ingredient5}}">
                </div>
                <div class=" col">

                    <input type="text" class="form-control mb-2" id="measure1" name="measure1" placeholder="Measure 1"
                        value="{{measure1}}">
                    <input type=" text" class="form-control mb-2" id="measure2" name="measure2" placeholder="Measure 2"
                        value="{{measure2}}">
                    <input type=" text" class="form-control mb-2" id="measure3" name="measure3" placeholder="Measure 3"
                        value="{{measure3}}">
                    <input type=" text" class="form-control mb-2" id="measure4" name="measure4" placeholder="Measure 4"
                        value="{{measure4}}">
                    <input type=" text" class="form-control mb-2" id="measure5" name="measure5" placeholder="Measure 5"
                        value="{{measure5}}">

                </div>
            </div>

            <div class="row">
                <label for="instructions" class="form-label">
                    <h4>Instructions:</h4>
                </label>
                <hr>
                <textarea name="instructions" id="instructions" class="card col-12 px-2 py-2"
                    style="min-height: 200px">{{instructions}}</textarea>
                <button type="submit" class="btn btn-custom mt-4">Edit Cocktail</button>
            </div>
        </form>

    </div>
</div>